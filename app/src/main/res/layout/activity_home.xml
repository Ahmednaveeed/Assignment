<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".HomeActivity">

    <!-- Toolbar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp">

        <!-- Camera Button -->
        <ImageView
            android:id="@+id/camera_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/camera"
            app:tint="#8b5151"
            android:layout_marginEnd="80dp"
            android:contentDescription="Camera"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Socially Text -->
        <TextView
            android:id="@+id/socially_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Socially"
            android:textColor="#8B4513"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/camera_button"
            app:layout_constraintEnd_toStartOf="@+id/message_button" />

        <!-- IGTV Button -->
        <ImageView
            android:id="@+id/igtv"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@drawable/igtv"
            app:tint="#8B4513"
            android:layout_marginStart="80dp"
            android:contentDescription="IGTV"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toStartOf="@+id/message_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Message Button -->
        <ImageView
            android:id="@+id/message_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/send"
            app:tint="#8B4513"
            android:layout_marginStart="80dp"
            android:contentDescription="Message"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Stories -->
    <HorizontalScrollView
        android:id="@+id/stories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:scrollbars="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <!-- Your Story -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/story1_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/your_story"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ahmed"
                    android:layout_marginEnd="1dp"
                    android:contentDescription="Your story"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/story1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your story"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    app:layout_constraintTop_toBottomOf="@+id/your_story"
                    app:layout_constraintStart_toStartOf="@+id/your_story" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Story 1 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/story2_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                app:layout_constraintStart_toEndOf="@+id/story1_container"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/story1_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/abdullah"
                    android:layout_marginEnd="1dp"
                    android:contentDescription="Story 1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/story2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="abdullah"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    app:layout_constraintTop_toBottomOf="@+id/story1_image"
                    app:layout_constraintStart_toStartOf="@+id/story1_image" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Story 2 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/story3_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                app:layout_constraintStart_toEndOf="@+id/story2_container"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/story2_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/hammad"
                    android:layout_marginEnd="1dp"
                    android:contentDescription="Story 2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/story3_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hammad"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    app:layout_constraintTop_toBottomOf="@+id/story2_image"
                    app:layout_constraintStart_toStartOf="@+id/story2_image" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Story 3 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/story4_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                app:layout_constraintStart_toEndOf="@+id/story3_container"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/story3_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/zohaib"
                    android:layout_marginEnd="1dp"
                    android:contentDescription="Story 3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/story4_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="zohaibbb"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    app:layout_constraintTop_toBottomOf="@+id/story3_image"
                    app:layout_constraintStart_toStartOf="@+id/story3_image" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Story 4 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/story5_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                app:layout_constraintStart_toEndOf="@+id/story4_container"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/story4_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/sauleh"
                    android:layout_marginEnd="1dp"
                    android:contentDescription="Story 4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/story5_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="saulehh"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    app:layout_constraintTop_toBottomOf="@+id/story4_image"
                    app:layout_constraintStart_toStartOf="@+id/story4_image" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <!-- Posts Section (Updated with RecyclerView) -->
    <ScrollView
        android:id="@+id/post_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/stories"
        app:layout_constraintBottom_toTopOf="@+id/navigation_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/posts_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Home Button -->
        <ImageView
            android:id="@+id/home_image"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/home"
            app:tint="#8B4513"
            android:layout_weight="1"
            android:contentDescription="Home" />

        <!-- Search Button -->
        <ImageView
            android:id="@+id/search_image"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/search"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:contentDescription="Search" />

        <!-- Add Button -->
        <ImageView
            android:id="@+id/add_post"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/add"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:contentDescription="Add" />

        <!-- Heart Button -->
        <ImageView
            android:id="@+id/heart_image"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/heart"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:contentDescription="Heart" />

        <!-- Profile Button -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/ahmed"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:contentDescription="Profile" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>