<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".heart_following">

    <!-- Tabs (Following | You) -->
    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tab_following"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Following"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#8B4513" />

        <TextView
            android:id="@+id/tab_you"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="You"
            android:textSize="16sp"
            android:textColor="#8B4513" />
    </LinearLayout>

    <!-- Scrollable notifications list -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Notification Row Example -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <!-- Profile Pic -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/abdullah"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <!-- Text + Preview Images -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="abdullah_malik309 liked 3 posts. 3h"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/black"/>

                    <!-- 3 Image previews -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/post1"
                            android:layout_marginEnd="4dp" />

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/post2"
                            android:layout_marginEnd="4dp" />

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/post3" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Example: Started Following You -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <!-- Profile Pic -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/faizan"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <!-- Text -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="faizan_naveed started following you. 3h"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <!-- Profile Pic -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/umair"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <!-- Text + Preview Images -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="umair.asghar liked 5 posts. 3h"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_marginBottom="4dp" />

                    <!-- 3 Image previews -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/post4"
                            android:layout_marginEnd="4dp" />

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/post5"
                            android:layout_marginEnd="4dp" />

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/post6" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <!-- Profile Pic -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sauleh"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <!-- Text + Preview Images -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="sauleh_naveed liked 3 posts. 3h"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_marginBottom="4dp" />

                    <!-- 3 Image previews -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/post1"
                            android:layout_marginEnd="4dp" />

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/post3"
                            android:layout_marginEnd="4dp" />
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/post7"
                            android:layout_marginEnd="4dp" />

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/post8"
                            android:layout_marginEnd="4dp" />

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/post9"
                            android:layout_marginEnd="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <!-- Example: someone liked 1 post -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/zohaib"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="zohaib_shafqat, hammad and saim liked joshua_l photo. 3h"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/post1"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/hammad"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="hammad, ali and abdullah liked your photo   .3h"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ahmed"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/faizan"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="faizan, sauleh and abdullah liked joshua_l photo. 3h"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/post5"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/abdullah"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="abdullah, umair and saim liked ahmed's photo. 3h"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/image4"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Home Button -->
        <ImageView
            android:id="@+id/home_image"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/homee"
            app:tint="#8B4513"
            android:layout_weight="1"
            android:contentDescription="Home" />

        <!-- Search Button -->
        <ImageView
            android:id="@+id/search_image"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/search"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            app:tint="#8B4513"
            android:contentDescription="Search" />

        <!-- Add Button -->
        <ImageView
            android:id="@+id/add_post"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/add"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:contentDescription="Add" />

        <!-- Heart Button -->
        <ImageView
            android:id="@+id/heart_image"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/heart2"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            app:tint="#8B4513"
            android:contentDescription="Heart" />

        <!-- Profile Button -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/ahmed"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:contentDescription="Profile" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
