<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".CallActivity">

    <!-- 1. Remote/Main Video View (Takes up the whole screen) -->
    <FrameLayout
        android:id="@+id/remote_video_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"/>

    <!-- Profile Picture & Call Info (Only visible during AUDIO calls or before video connects) -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_large"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/user"
        android:contentDescription="Profile Picture"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/call_status_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="32dp" />

    <!-- Status/Name Text (Takes the place of your static "saulehnaveed" text) -->
    <TextView
        android:id="@+id/call_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connecting..."
        android:textColor="#ffffff"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/profile_image_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Local User Video View (Small, top-right corner for self-view) -->
    <FrameLayout
        android:id="@+id/local_video_view_container"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:elevation="10dp"
        android:background="@android:color/darker_gray"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Control Buttons Container (Bottom strip) -->
    <LinearLayout
        android:id="@+id/controls_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="24dp"
        android:background="#80000000"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Mute Audio Button (Your previous 'text_button' role) -->
        <ImageView
            android:id="@+id/mute_audio_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/text"
            android:padding="12dp"

            android:layout_marginEnd="24dp"
            app:tint="@android:color/white"
            android:contentDescription="Mute Audio"/>

        <!-- End Call Button (Your previous 'hangup_button' role - CRITICAL) -->
        <ImageView
            android:id="@+id/end_call_button"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/hangup"
            android:padding="16dp"

            android:layout_marginEnd="24dp"
            app:tint="@android:color/white"
            android:contentDescription="End Call"/>

        <!-- Toggle Video Button (Your previous 'speaker_button' role, now for video) -->
        <ImageView
            android:id="@+id/toggle_video_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/speaker"
            android:padding="12dp"

            app:tint="@android:color/white"
            android:contentDescription="Toggle Video"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>