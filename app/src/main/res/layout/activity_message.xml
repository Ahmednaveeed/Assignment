                </LinearLayout>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text=".20m"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/camera" />
            </LinearLayout>

            <!-- fifth DM -->
            <LinearLayout
                android:id="@+id/dm5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
