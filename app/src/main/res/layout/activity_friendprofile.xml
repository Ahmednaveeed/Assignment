                    android:layout_marginEnd="-8dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/zohaib"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="6dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Followed by abdullah_malik309, zohaib_shafqat and 219 more people"
                    android:textSize="13sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            -->

            <!-- Profile Action Buttons -->
            <LinearLayout
                android:id="@+id/profileActions"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/bio_work"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="16dp">

                <!-- Follow Button (Brown) -->
                <Button
                    android:id="@+id/followBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Follow"
                    android:textColor="@android:color/white"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="#8B4513"
                    android:layout_marginEnd="6dp"/>

                <!-- Message Button (Grey) -->
                <Button
                    android:id="@+id/messageBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Message"
                    android:textColor="@android:color/white"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="#A9A9A9"
                    android:layout_marginEnd="6dp"/>

                <!-- Email Button (Grey) -->
                <Button
                    android:id="@+id/emailBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Email"
                    android:textColor="@android:color/white"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="#A9A9A9"
                    android:layout_marginEnd="6dp"/>

                <!-- Add Icon (Grey Circle) -->
                <ImageView
                    android:id="@+id/addIcon"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/addfriends"
                    android:scaleType="centerInside"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="#E0E0E0"
                    android:padding="8dp"/>
            </LinearLayout>



            <!-- In activity_friendprofile.xml, BEFORE the Highlights RecyclerView -->
            <TextView
                android:id="@+id/content_restriction_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="You must follow this account to see posts and highlights."
                android:textSize="16sp"
                android:textColor="#A9A9A9"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/profileActions"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"/>



            <!-- Highlights RecyclerView (UPDATED) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/highlights_recycler_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                app:layout_constraintTop_toBottomOf="@id/profileActions"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:layout_constraintTop_toBottomOf="@+id/highlights_recycler_view">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="Grid"
                    android:src="@drawable/feed"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="80dp"
                    app:tint="#8B4513"
                    tools:layout_editor_absoluteY="16dp"
                    tools:ignore="MissingConstraints" />

                <!-- third highlight -->
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="Tagged"
                    android:src="@drawable/tag"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    android:layout_marginStart="185dp"
                    tools:layout_editor_absoluteY="16dp"
                    app:tint="#a89fa7"
                    tools:ignore="MissingConstraints" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Posts Grid - CRASHING ELEMENT REPLACED -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/postsGrid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/tag"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom Nav -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:backgroundTint="@color/white"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!-- ... (Bottom nav content remains) ... -->
        <ImageView
            android:id="@+id/home_image"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/homee"
            app:tint="#8B4513"
            android:layout_weight="1"
            android:contentDescription="Home" />

        <!-- Search Button -->
        <ImageView
            android:id="@+id/search_image"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/search"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:contentDescription="Search" />

        <!-- Add Button -->
        <ImageView
            android:id="@+id/add_post"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/add"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:contentDescription="Add" />

        <!-- Heart Button -->
        <ImageView
            android:id="@+id/heart_image"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/heart"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:contentDescription="Heart" />

        <!-- Profile Button -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/user"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:contentDescription="Profile" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>