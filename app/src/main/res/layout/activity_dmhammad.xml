<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <!-- Toolbar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dm_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back"
            android:contentDescription="Back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="#8B4513"/>

        <!-- Profile Picture -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/hammad"
            android:contentDescription="Profile Picture"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/back_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Username -->
        <TextView
            android:id="@+id/username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hammad_yasin"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/profile_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Options Button -->
        <ImageView
            android:id="@+id/options_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/info"
            android:contentDescription="Options"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="#8B4513"/>

        <!-- Video Call Icon -->
        <ImageView
            android:id="@+id/video_call_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/video"
            android:contentDescription="Video Call"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@id/options_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Message Area -->
    <ScrollView
        android:id="@+id/message_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F0F2F5"
        app:layout_constraintTop_toBottomOf="@+id/dm_toolbar"
        app:layout_constraintBottom_toTopOf="@+id/input_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/messages_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">

            <!-- Timestamp -->
            <TextView
                android:id="@+id/chat_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:45 AM"
                android:textColor="#808080"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"/>

            <!-- Chat Bubble 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/bubble1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hello"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:padding="8dp" />
            </androidx.cardview.widget.CardView>

            <!-- Chat Bubble 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/bubble2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardBackgroundColor="#a15755"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi hammad Bhai"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:padding="8dp" />
            </androidx.cardview.widget.CardView>

            <!-- Chat Bubble 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/bubble3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bye bye"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:padding="8dp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


    <!-- Input Bar -->
    <LinearLayout
        android:id="@+id/input_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp">

        <!-- camera Button -->
        <ImageView
            android:id="@+id/camera_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/camera2"
            android:contentDescription="camera Note"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            app:tint="#8B4513"/>

        <!-- Message Input -->
        <EditText
            android:id="@+id/message_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Message..."
            android:textColor="#000000"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:padding="8dp" />

        <!-- Voice Button -->
        <ImageView
            android:id="@+id/voice_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/voice"
            android:contentDescription="voice"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <!-- Media Button -->
        <ImageView
            android:id="@+id/media_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/picture"
            android:contentDescription="Picture"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="8dp" />

        <!-- GIF Button -->
        <ImageView
            android:id="@+id/gif_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/gif"
            android:contentDescription="GIF" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
