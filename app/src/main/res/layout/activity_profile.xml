<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".Profile"
    android:layout_height="match_parent">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- username -->
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="16dp"
                android:text="_ahmednaveeed"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#8B4513"
                app:layout_constraintEnd_toStartOf="@id/dropdown_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- arrow -->
            <ImageView
                android:id="@+id/dropdown_icon"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/back2"
                app:layout_constraintBottom_toBottomOf="@+id/username"
                app:layout_constraintStart_toEndOf="@id/username"
                app:tint="#8B4513" />

            <!-- options -->
            <ImageView
                android:id="@+id/options_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/options"
                app:layout_constraintTop_toTopOf="@id/username"
                app:layout_constraintBottom_toBottomOf="@id/username"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" />

            <!-- Profile image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_picture"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ahmed"
                android:scaleType="centerCrop"
                android:background="@drawable/circle"
                android:padding="2dp"
                app:layout_constraintTop_toBottomOf="@id/username"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp" />

            <!-- Posts count -->
            <TextView
                android:id="@+id/posts_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/profile_picture"
                app:layout_constraintStart_toEndOf="@id/profile_picture"
                app:layout_constraintEnd_toStartOf="@id/followers_count"
                app:layout_constraintHorizontal_chainStyle="spread"
                android:layout_marginTop="20dp"
                android:layout_marginStart="0dp" />

            <TextView
                android:id="@+id/posts_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posts"
                android:textSize="14sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/posts_count"
                app:layout_constraintStart_toStartOf="@id/posts_count"
                app:layout_constraintEnd_toEndOf="@id/posts_count" />

            <!-- Followers -->
            <TextView
                android:id="@+id/followers_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="834"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/posts_count"
                app:layout_constraintStart_toEndOf="@id/posts_count"
                app:layout_constraintEnd_toStartOf="@id/following_count" />

            <TextView
                android:id="@+id/followers_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Followers"
                android:textSize="14sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/followers_count"
                app:layout_constraintStart_toStartOf="@id/followers_count"
                app:layout_constraintEnd_toEndOf="@id/followers_count" />

            <!-- Following -->
            <TextView
                android:id="@+id/following_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="162"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/posts_count"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="40dp" />

            <TextView
                android:id="@+id/following_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Following"
                android:textSize="14sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/following_count"
                app:layout_constraintStart_toStartOf="@id/following_count"
                app:layout_constraintEnd_toEndOf="@id/following_count" />

            <!-- name -->
            <TextView
                android:id="@+id/bio_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ahmed Naveed"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/profile_picture"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp" />

            <!-- BIO -->
            <TextView
                android:id="@+id/bio_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22 | FAST | ISB"
                android:textSize="14sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/bio_name"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/bio_quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="developer."
                android:textSize="14sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/bio_work"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="12dp" />

            <!-- Edit Profile Button -->
            <Button
                android:id="@+id/editProfileBtn"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="Edit Profile"
                android:background="@drawable/rounded_button"
                app:layout_constraintTop_toBottomOf="@id/bio_quote"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="16dp" />

            <!-- Highlights RecyclerView (UPDATED) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/profile_highlights_recycler_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                app:layout_constraintTop_toBottomOf="@id/editProfileBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_highlights_recycler_view">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="Grid"
                    android:src="@drawable/feed"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="80dp"
                    app:tint="#8B4513"
                    tools:layout_editor_absoluteY="16dp"
                    tools:ignore="MissingConstraints" />

                <!-- third highlight -->
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="Tagged"
                    android:src="@drawable/tag"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    android:layout_marginStart="185dp"
                    tools:layout_editor_absoluteY="16dp"
                    app:tint="#a89fa7"
                    tools:ignore="MissingConstraints" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Posts Grid (Updated with RecyclerView) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/profile_posts_recycler_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/tag"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom Nav -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:backgroundTint="@color/white"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Home Button -->
        <ImageView
            android:id="@+id/home_image"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/homee"
            app:tint="#8B4513"
            android:layout_weight="1"
            android:contentDescription="Home" />

        <!-- Search Button -->
        <ImageView
            android:id="@+id/search_image"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/search"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:contentDescription="Search" />

        <!-- Add Button -->
        <ImageView
            android:id="@+id/add_post"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/add"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:contentDescription="Add" />

        <!-- Heart Button -->
        <ImageView
            android:id="@+id/heart_image"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/heart"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:contentDescription="Heart" />

        <!-- Profile Button -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/ahmed"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:contentDescription="Profile" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>