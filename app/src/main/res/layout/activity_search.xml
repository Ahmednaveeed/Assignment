<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".search"
    android:background="#FFFFFF">

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/searchBarContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:drawable/edit_text"
        android:padding="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/search"
            android:layout_marginTop="7dp"
            android:contentDescription="Search Icon"
            android:padding="4dp"/>

        <EditText
            android:id="@+id/searchBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Search"
            android:padding="6dp"
            android:textColorHint="#8B4513"
            android:background="@null"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/scanner"
            android:layout_marginTop="7dp"
            android:contentDescription="QR"
            app:tint="#8B4513"
            android:padding="4dp"/>

    </LinearLayout>

    <!-- Category Options -->
    <LinearLayout
        android:id="@+id/categoryContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/searchBarContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <!-- shop button -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/shop"
                    android:contentDescription="Shop"
                    app:tint="#8B4513"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop"
                    android:textColor="#8B4513"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- style button -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Style"
                android:textColor="#8B4513"
                android:backgroundTint="@color/white"
                android:padding="8dp"/>
        </androidx.cardview.widget.CardView>

        <!-- sports button -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Sports"
                android:textColor="#8B4513"
                android:backgroundTint="@color/white"
                android:padding="8dp"/>
        </androidx.cardview.widget.CardView>

        <!-- audio button -->
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto"
                android:textColor="#8B4513"
                android:backgroundTint="@color/white"
                android:padding="8dp"/>
        </androidx.cardview.widget.CardView>

        <!-- music button -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Music"
                android:textColor="#8B4513"
                android:backgroundTint="@color/white"
                android:padding="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Image Container -->
    <ScrollView
        android:id="@+id/imageScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/categoryContainer"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- image 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="150dp"
                    android:layout_weight="2"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/image1"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <!-- image 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="150dp"
                    android:layout_weight="2"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/image2"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- image 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/image3"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Row 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- image 4 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/image4"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <!-- image 5 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/image5"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <!-- image 6 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/image6"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- row 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- image 7 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/image7"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <!-- image 8 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/image8"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <!-- image 9 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/image9"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Home Button -->
        <ImageView
            android:id="@+id/home_image"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/homee"
            app:tint="#8B4513"
            android:layout_weight="1"
            android:contentDescription="Home" />

        <!-- Search Button -->
        <ImageView
            android:id="@+id/search_image"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/search3"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            app:tint="#8B4513"
            android:contentDescription="Search" />

        <!-- Add Button -->
        <ImageView
            android:id="@+id/add_post"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/add"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:contentDescription="Add" />

        <!-- Heart Button -->
        <ImageView
            android:id="@+id/heart_image"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/heart"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:contentDescription="Heart" />

        <!-- Profile Button -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:src="@drawable/ahmed"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:contentDescription="Profile" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
