<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".heart_you">

    <!-- top bar -->
    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tab_following"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Following"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#8B4513" />

        <TextView
            android:id="@+id/tab_you"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="You"
            android:textSize="16sp"
            android:textColor="#8B4513" />
    </LinearLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintBottom_toTopOf="@id/navigation_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="12dp">

            <!-- Follow Requests -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow Requests"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#8B4513"
                android:paddingVertical="12dp" />

            <!-- Section: New -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingVertical="8dp" />

            <!-- Row: New notification -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/abdullah"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="abdullah_malik309 liked your photo. 1h"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/post1"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Section: Today -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingVertical="8dp" />

            <!-- Row: Today -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/faizan"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="faizan_naveed, zohaib_shafqat and 26 others liked your photo. 3h"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/post9"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Section: This Week -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Week"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingVertical="8dp" />

            <!-- Row: Mention -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/umair"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="umair.asghar mentioned you in a comment: @_ahmednaveeed exactly.. 2d"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/post4"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Row: Started Following -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/zohaib"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="zohaib_shafqat has started following you. 3d"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Message"
                    android:textSize="12sp"
                    android:backgroundTint="#EEEEEE"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- Row: Started Following -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/umair"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="umair started following you. 3d"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Message"
                    android:textSize="12sp"
                    android:backgroundTint="#EEEEEE"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- Row: Started Following -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/hammad"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="hammad_yasin has started following you. 3d"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Follow"
                    android:textSize="12sp"
                    android:backgroundTint="#8B4513"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Section: This Month -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Month"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingVertical="8dp" />

            <!-- row under Month -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sauleh"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="sauleh_naveed started following you. 4w"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Home Button -->
        <ImageView
            android:id="@+id/home_image"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:src="@drawable/homee"
            android:layout_weight="1"
            android:contentDescription="Home" />

        <!-- Search Button -->
        <ImageView
            android:id="@+id/search_image"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:src="@drawable/search"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:contentDescription="Search" />

        <!-- Add Button -->
        <ImageView
            android:id="@+id/add_post"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:src="@drawable/add"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:contentDescription="Add" />

        <!-- Heart Button -->
        <ImageView
            android:id="@+id/heart_image"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:src="@drawable/heart2"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            app:tint="#8B4513"
            android:contentDescription="Heart" />

        <!-- Profile Button -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:src="@drawable/profile"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:contentDescription="Profile" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
