<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".heart_you">

    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tab_following"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Following"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tab_you"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="You"
            android:textSize="16sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="12dp">

            <!-- Follow Requests -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow Requests"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#C62828"
                android:paddingVertical="12dp" />

            <!-- Section: New -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingVertical="8dp" />

            <!-- Row: New notification -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sample_user1"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="karennne liked your photo. 1h"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sample_post1"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Section: Today -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingVertical="8dp" />

            <!-- Row: Today multi-likes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sample_user2"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="kiero_d, zackjohn and 26 others liked your photo. 3h"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sample_post2"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Section: This Week -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Week"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingVertical="8dp" />

            <!-- Row: Mention -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sample_user3"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="craig_love mentioned you in a comment: @jacob_w exactly.. 2d"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sample_post3"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Row: Started Following + Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sample_user4"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="martini_rond started following you. 3d"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Message"
                    android:textSize="12sp"
                    android:backgroundTint="#EEEEEE"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- Row: Started Following + Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sample_user5"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="maxjacobson started following you. 3d"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Message"
                    android:textSize="12sp"
                    android:backgroundTint="#EEEEEE"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- Row: Started Following + Follow Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sample_user6"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="mis_potter started following you. 3d"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Follow"
                    android:textSize="12sp"
                    android:backgroundTint="#C62828"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Section: This Month -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Month"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingVertical="8dp" />

            <!-- Example row under This Month -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sample_user7"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="mr_burnham started following you. 4w"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
