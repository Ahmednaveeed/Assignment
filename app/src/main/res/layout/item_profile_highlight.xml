<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="12dp">

    <!-- Regular Highlight Image -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_highlight_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="2dp"
        android:visibility="visible"/>

    <!-- New Highlight Button (FrameLayout) -->
    <FrameLayout
        android:id="@+id/new_highlight_container"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/highlight_circle"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:contentDescription="Add New Highlight"
            android:src="@drawable/plus"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            app:tint="#8B4513" />
    </FrameLayout>

    <!-- Highlight Title -->
    <TextView
        android:id="@+id/profile_highlight_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#8B4513"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp"/>
</LinearLayout>